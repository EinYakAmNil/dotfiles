#!/bin/bash

case $1 in
"select")
	playlst=$(ls $HOME/Musik | rofi -dmenu -i -l 15 -p "Select playlist: ")

	[ -z "$playlst" ] && exit 1

	selection=$(ls -t "$HOME/Musik/$playlst" |
		sed 's/\(.*\)\..*$/\1/' |
		rofi -dmenu -i -l 15 -p "Select song: ")

	# Exit if nothing is selected.
	[ -z "$selection" ] && exit 1

	# If another instance is running, then kill it
	[ "$(pgrep mpv)" ] && echo '{"command": ["quit"]}' | socat - $MPVSOCKET

	# Start selected song and append with shuffled music library
	selection=$(ls "$HOME/Musik/$playlst" | grep "$selection\.")
	cd "$HOME/Musik/$playlst" && ls "$PWD"/* |
		shuf | head -n 1000 |
		xargs -d "\n" mpv --no-video --input-ipc-server=$MPVSOCKET "$selection" && exit 0

	# No idea what went wrong
	exit 2
	;;
"toggle")
	echo '{"command": ["cycle", "pause"]}' |
		socat - $MPVSOCKET && exit 0 ||
		mpv --no-video --shuffle=yes --input-ipc-server=$MPVSOCKET $HOME/Musik/all/* &&
		exit 0
	exit 1
	;;
"next")
	echo '{"command": ["playlist-next"]}' | socat - $MPVSOCKET && exit 0
	exit 1
	;;
"prev")
	echo '{"command": ["playlist-prev"]}' | socat - $MPVSOCKET && exit 0
	exit 1
	;;
*)
	exit 1
	;;
esac
